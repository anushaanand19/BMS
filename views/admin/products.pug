extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/admin.css")
    link(rel="stylesheet", href="/css/shop.css")

block content
    .product-nav
        if prods.length > 0
            .products
                each prod in prods
                    .product-display
                        img.product-img(src=`${prod.image}`, alt="A simple book", )
                        .productLabel
                            .prodName #{prod.name} 
                            .prodDescription  #{prod.description}
                            .actions
                                a(href=`products/edit-product/${prod.id}`)
                                    button.btn.btn-success(type="submit") Edit
                                a(href=`products/deleteproduct/${prod.id}`)
                                    button.btn.btn-success(type="submit") Delete
        else
            .display-text No Products found