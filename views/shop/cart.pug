extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/shop.css")

block content
    .product-nav
        if prods.length > 0
            .products
                each prod in prods
                    .product-display
                        .productLabel
                            .prodName #{prod.title}
                            .prodName #{prod.cartItem.qty}   
        else
            .display-text No Products found