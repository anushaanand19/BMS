extends ../layouts/main-layout.pug

block styles
    link(rel="stylesheet", href="/css/shop.css")

block content
    .product-nav
        if prods.length > 0
            .products
                each prod in prods
                    .product-display
                        img.product-img(src=`${prod.image}`, alt="A simple book", )
                        .productLabel
                            .prodName #{prod.name} 
                            .prodDescription  #{prod.description}
                            a(href=`products/${prod.id}`)
                                button.btn.btn-success(type="submit") Details
        else
            .display-text No Products found